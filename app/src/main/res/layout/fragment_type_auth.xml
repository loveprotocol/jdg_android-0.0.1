<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mvvm.view.fragment.cardtypes.AuthFragment">

    <LinearLayout
        android:id="@+id/fragment_type_auth_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_type_auth_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_type_dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_type_auth_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPlumBoardSub"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/fragment_type_auth_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorPlumBoardSub"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/fragment_type_auth_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/fragment_type_auth_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_type_auth_ll"
        app:layout_constraintVertical_bias="0.0" />


    <ToggleButton
        android:id="@+id/fragment_type_auth_btn"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@drawable/drawable_card_mc_btn_custom"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/drawable_card_mc_check"
        android:paddingEnd="0dp"
        android:paddingStart="30dp"
        android:textAlignment="textStart"
        android:textColor="@color/colorPlumBoardSub"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_type_auth_img"/>

    <!--<Button-->
        <!--android:id="@+id/fragment_type_auth_btn"-->
