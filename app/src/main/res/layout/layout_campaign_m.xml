<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_campaign_m_point_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/layout_campaign_kind_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/layout_campaign_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="10000"
            android:layout_gravity="center"
            android:textSize="16sp" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_campaign_m_title_ll"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/layout_campaign_company_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/layout_campaign_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingStart="3dp"
            android:text="타이입입입입입입입입dwdwdwd입입입입틀입니"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/layout_campaign_rating_bar" />

        <com.willy.ratingbar.BaseRatingBar
            android:id="@+id/layout_campaign_rating_bar"
            android:layout_width="120dp"
            android:layout_height="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_campaign_title"
            app:srb_clickable="false"
            app:srb_drawableEmpty="@drawable/ic_plum_star_outline"
            app:srb_drawableFilled="@drawable/ic_plum_star_color"
            app:srb_scrollable="false"
            app:srb_starHeight="15dp"
            app:srb_starPadding="4dp"
            app:srb_starWidth="15dp"
            app:srb_stepSize="0.1" />

        <TextView
            android:id="@+id/layout_campaign_rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:text="4.7 (509)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/layout_campaign_rating_bar"
            app:layout_constraintTop_toBottomOf="@+id/layout_campaign_title" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/layout_campaign_company_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.imhc2.plumboard.commons.util.CustomImageView169
        android:id="@+id/layout_campaign_main_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />



    <TextView
        android:id="@+id/layout_campaign_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>
