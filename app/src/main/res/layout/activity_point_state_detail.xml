<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvvm.view.activity.activitypoint.PointStateDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_point_state_detail_appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_point_state_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolbarStyle" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/activity_point_state_detail_LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/activity_point_state_detail_appbarLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/activity_point_state_detail_stateTv" />

            <Button
                android:id="@+id/activity_point_state_detail_stateTv"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPlumBoard"
                android:text="야호"
                android:textColor="@color/colorPlumBoardSub"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/activity_point_state_detail_applyTv" />

            <TextView
                android:id="@+id/activity_point_state_detail_dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2018-02-02" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_point_state_detail_dateDoneRl"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="처리일시" />

            <TextView
                android:id="@+id/activity_point_state_detail_dateDoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2018-02-02" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/activity_point_state_detail_bankTv" />

            <TextView
                android:id="@+id/activity_point_state_detail_bankTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="00은행" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/activity_point_state_detail_bankNameTv" />

            <TextView
                android:id="@+id/activity_point_state_detail_nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="이름" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/activity_point_state_detail_bankNumTv" />

            <TextView
                android:id="@+id/activity_point_state_detail_bankNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="120312030123" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/activity_point_state_detail_pointTv" />

            <TextView
                android:id="@+id/activity_point_state_detail_moneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="25,2323" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_point_state_detail_errorRl"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/activity_point_state_detail_errorTv" />

            <TextView
                android:id="@+id/activity_point_state_detail_errorTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="dsadasd"
                android:textColor="@android:color/holo_red_light" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/activity_point_state_detail_cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPlumBoard"
        android:text="접수 취소하기"
        android:textColor="@color/colorPlumBoardSub"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>