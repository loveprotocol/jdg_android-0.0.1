<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_card_history_item_ll"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center">
    <ImageView
        android:id="@+id/layout_card_history_item_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"/>
    <TextView
        android:id="@+id/layout_card_history_item_tv"
        android:text="현재 캠페인의 이름"
        android:textSize="14sp"
        android:singleLine="true"
        android:layout_weight="9"
        android:layout_width="0dp"
        android:layout_height="20dp" />
    <ImageView
        android:id="@+id/layout_card_history_item_check_img"
        app:srcCompat="@drawable/ic_history_check"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:visibility="invisible"/>
</LinearLayout>
