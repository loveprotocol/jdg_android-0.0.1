<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.imhc2.plumboard.mvvm.view.activity.mypage.MyProfileActivity">

    <FrameLayout
        android:id="@+id/activity_my_profile_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPlumBoard">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_my_profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarStyle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/drawable_profile_round_border"
                    android:layout_gravity="center"
                    android:gravity="center">
                <ImageView
                    android:id="@+id/activity_my_profile_myImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    app:srcCompat="@drawable/ic_profile_camera" />

            </FrameLayout>


            <TextView
                android:id="@+id/activity_my_profile_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPlumBoardSub" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_my_profile_nickName"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/activity_my_profile_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/WithDrawMoneyEtStyle" />
    </LinearLayout>

</LinearLayout>
