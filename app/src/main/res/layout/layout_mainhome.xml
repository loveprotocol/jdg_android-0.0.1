<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="220dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginStart="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.imhc2.plumboard.commons.util.CustomImageView43
            android:id="@+id/layout_main_home_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/layout_main_home_type_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="left|top"
            android:layout_margin="10dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_plum_logo_color" />

            <TextView
                android:id="@+id/layout_main_home_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_gravity="left"
                android:text="500" />
        </LinearLayout>

        <TextView
            android:layout_marginStart="24dp"
            android:id="@+id/layout_main_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="left"
            android:singleLine="true"
            android:text="title입니다" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <com.willy.ratingbar.BaseRatingBar
                android:id="@+id/layout_main_home_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                app:srb_clickable="false"
                app:srb_drawableEmpty="@drawable/ic_plum_star_outline"
                app:srb_drawableFilled="@drawable/ic_plum_star_color"
                app:srb_scrollable="false"
                app:srb_starHeight="12dp"
                app:srb_starPadding="3dp"
                app:srb_starWidth="12dp"
                app:srb_stepSize="0.1" />

            <TextView
                android:id="@+id/layout_main_home_rating_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="1231313" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
